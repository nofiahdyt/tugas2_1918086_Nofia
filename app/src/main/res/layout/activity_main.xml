<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment_1"
            android:name="com.example.tugas2praktikum.Fragment1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <fragment
            android:id="@+id/fragment_2"
            android:name="com.example.tugas2praktikum.Fragment2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment_3"
            android:name="com.example.tugas2praktikum.Fragment3"/>

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/fragment_4"
            android:name="com.example.tugas2praktikum.Fragment4"/>
    </LinearLayout>


</LinearLayout>